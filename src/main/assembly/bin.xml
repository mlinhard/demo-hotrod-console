<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>hotrodconsole-${version}</baseDirectory>
	<files>
		<file>
			<source>src/main/bin/console.sh</source>
			<outputDirectory>bin</outputDirectory>
			<destName>console.sh</destName>
		</file>
		<file>
			<source>src/main/bin/console.bat</source>
			<outputDirectory>bin</outputDirectory>
			<destName>console.bat</destName>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<includes>
				<include>README.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/dependency</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<excludes>
				<!--exclude>xxx.jar</exclude-->
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>demo-hotrod-console-${version}.jar</include>
			</includes>
			<excludes>
				<!--exclude>xxx.jar</exclude-->
			</excludes>
		</fileSet>
	</fileSets>
</assembly>